{
    "name": "lazy-time-api",
    "version": "0.0.1",
    "description": "Lazy Time API",
    "author": "",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "nodemon",
        "start:debug": "nodemon --config nodemon-debug.json",
        "prestart:prod": "rimraf dist && npm run build",
        "start:prod": "npm run pm2:stop && npm run pm2:start",
        "pm2:start": "pm2 start dist/main.js --name lazy-time-api --max-restarts 5",
        "pm2:stop": "pm2 delete -s lazy-time-api || :",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run format"
        }
    },
    "dependencies": {
        "@nest-modules/mailer": "1.0.4",
        "@nestjs/common": "6.0.2",
        "@nestjs/core": "6.0.2",
        "@nestjs/graphql": "6.0.2",
        "@nestjs/platform-express": "6.0.2",
        "@nestjs/platform-socket.io": "6.0.2",
        "@nestjs/websockets": "6.0.2",
        "apollo-server-express": "2.4.8",
        "bcrypt": "^3.0.5",
        "dotenv": "^7.0.0",
        "graphql": "14.1.1",
        "graphql-tools": "4.0.4",
        "mysql2": "1.6.5",
        "nest-schedule": "^0.4.6",
        "reflect-metadata": "0.1.13",
        "rimraf": "2.6.3",
        "rxjs": "6.4.0",
        "sequelize": "5.1.0",
        "sequelize-typescript": "0.6.8",
        "typescript": "3.3.4000"
    },
    "devDependencies": {
        "@nestjs/testing": "6.0.2",
        "@types/bcrypt": "^3.0.0",
        "@types/dotenv": "^6.1.0",
        "@types/express": "4.16.1",
        "@types/jest": "24.0.11",
        "@types/node": "11.11.4",
        "@types/sequelize": "4.27.44",
        "@types/socket.io": "2.1.2",
        "@types/supertest": "2.0.7",
        "husky": "1.3.1",
        "jest": "24.5.0",
        "nodemon": "1.18.10",
        "prettier": "1.16.4",
        "supertest": "4.0.2",
        "ts-jest": "24.0.0",
        "ts-loader": "5.3.3",
        "ts-node": "8.0.3",
        "tsconfig-paths": "3.8.0",
        "tslint": "5.14.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
