{
    "name": "wobbly-time-tracker-api",
    "version": "1.0.7",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "nodemon",
        "start:debug": "nodemon --config nodemon-debug.json",
        "prestart:prod": "rimraf dist && npm run build",
        "start:prod": "npm run pm2:stop && npm run pm2:start",
        "pm2:start": "pm2 start dist/main.js --name wobbly-time-tracker-api --max-restarts 5",
        "pm2:stop": "pm2 delete -s wobbly-time-tracker-api || :",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run format"
        }
    },
    "dependencies": {
        "@nestjs-modules/mailer": "1.4.2",
        "@nestjs/common": "6.3.0",
        "@nestjs/core": "6.3.0",
        "@nestjs/jwt": "6.1.1",
        "@nestjs/passport": "6.1.0",
        "@nestjs/platform-express": "6.3.0",
        "@nestjs/platform-socket.io": "6.3.0",
        "@nestjs/websockets": "6.3.0",
        "apollo-server-express": "2.14.2",
        "axios": "0.19.0",
        "bcrypt": "3.0.5",
        "crypto": "1.0.1",
        "dotenv": "7.0.0",
        "fs-extra": "7.0.1",
        "graphql": "14.1.1",
        "graphql-tools": "4.0.4",
        "humanize-duration": "3.18.0",
        "json-2-csv-ts": "1.1.2",
        "moment": "2.25.3",
        "multer": "1.4.2",
        "mysql2": "1.6.5",
        "nest-schedule": "0.4.6",
        "nodemailer": "6.4.6",
        "passport": "0.4.0",
        "passport-http-bearer": "1.0.1",
        "path": "0.12.7",
        "reflect-metadata": "0.1.13",
        "rimraf": "2.6.3",
        "rxjs": "6.4.0",
        "sequelize": "5.15.1",
        "sequelize-typescript": "0.6.10",
        "slugify": "1.3.4",
        "typescript": "3.3.4000",
        "uuid": "3.3.2"
    },
    "devDependencies": {
        "@nestjs/testing": "6.3.0",
        "@types/bcrypt": "3.0.0",
        "@types/dotenv": "6.1.0",
        "@types/express": "4.16.1",
        "@types/fs-extra": "5.0.5",
        "@types/jest": "24.0.11",
        "@types/node": "11.11.4",
        "@types/sequelize": "4.27.47",
        "@types/socket.io": "2.1.2",
        "@types/supertest": "2.0.7",
        "husky": "1.3.1",
        "jest": "24.5.0",
        "nodemon": "1.18.10",
        "prettier": "1.16.4",
        "supertest": "4.0.2",
        "ts-jest": "24.0.0",
        "ts-loader": "5.3.3",
        "ts-node": "8.0.3",
        "tsconfig-paths": "3.8.0",
        "tslint": "5.14.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            ".+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
